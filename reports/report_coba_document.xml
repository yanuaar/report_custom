<odoo>
    <data>
    
        <template id="report_custom.report_coba">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="report_custom.report_coba_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_coba_document">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context(lang=lang)"/>

                <div class="page">
                    <div class="oe_structure"/>
                    
                    <div class="row">
                        <div class="col-8"></div>
                        <div name="invoice_address" class="col-4 pull-right">
                            <strong><span>Customer Address :</span></strong>
                            <address t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True}"/> <!-- , "phone_icons": True -->
                            <!-- <span t-if="doc.partner_id.vat">TIN: <span t-field="doc.partner_id.vat"/></span> -->
                        </div>
                    </div>
                    
                    <div class="row mt32">
                        <div class="col-8">
                            <h4>
                                <strong>Sales Order <span t-field="doc.name"></span></strong>
                            </h4>
                        </div>
                    </div>

                    <div class="row mb16">
                        <div class="col-2">
                            <strong>Date Order : </strong>
                            <span t-field="doc.date_order"/>
                        </div>
                        <div class="col-2">
                            <strong>Payment Terms : </strong>
                            <p class="m-0" t-field="doc.payment_term_id"/>
                        </div>
                    </div>

                    
                    
                    <div class="oe_structure"/>
                
                </div>
            </t>
        </template>

    
    </data>
</odoo>
